<%- include('../includes/head.ejs') %>

<body xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<%- include('../includes/nav.ejs') %>

<main>
    <% if (prods != null) { %>
        <div class="grid">
            <% for (let product of prods) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= product.imageUrl %>" alt="book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">Â£<%= product.price %></h2>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn">Edit</a>
                        <form action="/admin/delete-product" method="POST">
                            <input type="hidden" value="<%= product.id %>" name="productId">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No products... yet</h1>

    <% } %>
</main>
<%- include('../includes/end.ejs') %>